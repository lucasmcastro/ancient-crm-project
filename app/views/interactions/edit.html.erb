<h2>Alterando Interação Comercial</h2>

<% form_for(@interaction) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :tipo %><br />
  	<%= select :interaction, :type_id, InteractionType.find(:all).collect { |it| [it.name, it.id] }%>
  </p>
  <p>
    <%= f.label :assunto %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :conteúdo %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Atualizar' %>
  </p>
<% end %>

<%= link_to 'Voltar para oportunidade', @opportunity %>