<% content_for :shortcuts do %>
<ul><li><%= link_to 'Adicionar Conta', new_account_path %></li></ul>

<% end %>

<h2>Todas as Contas</h2>
<table>
  <tr>
    <th>Nome Fantasia</th>	
    <th>CNPJ</th>	
    <th>Razão Social</th>	
    <th>Valor</th>
    <th>Interações</th>
    <th>Problemas</th>	
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= link_to account.name, account %> ( <%= account.opportunities.count %> )</td>
    <td><%=h account.cnpj %> </td>
    <td><%=h account.legal_name %> </td>
    <td>R$ <%= account.opportunities.sum(:value) %></td>
    <td><%= account.interactions_sum %></td>
    <td><%= account.open_issues_sum %>/<%= account.issues_sum %></td>
    <td><%= link_to 'Nova Oportunidade', new_account_opportunity_path(account) %></td>	
  </tr>
<% end %>
</table>

<br />