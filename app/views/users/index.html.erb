<h3>Usuários</h3>


<table>
  <tr>
    <th>Nome</th>	
    <th>Email</th>
    <th></th>	
    <th></th>	
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
	<td><%= user.email %></td>
    <td><%= link_to 'Alterar', edit_user_path(user) %></td>
    <td><%= link_to 'Remover', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

