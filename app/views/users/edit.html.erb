<h1>Alterando usuário</h1>

<% form_for @user, :action => 'update' do |f| %>
  <%= f.error_messages %>
	<% @user.password = @user.password_confirmation = nil %>

	<p>
	<%= label_tag 'login', 'Login' %><br/>
	<%= f.text_field :login %>
	</p>

	<p>
	<%= label_tag 'email', 'Email' %><br/>
	<%= f.text_field :email %>
	</p>

	<p>
	<%= label_tag 'password', 'Alterar Senha' %><br/>
	<%= f.password_field :password %>
	</p>

	<p>
	<%= label_tag 'password_confirmation', 'Confirme Senha' %><br/>
	<%= f.password_field :password_confirmation %>
	</p>
  
	<p>
	<%= f.submit 'Alterar' %>
	</p>
<% end %>

<%= link_to 'Voltar para usuários', users_path %>