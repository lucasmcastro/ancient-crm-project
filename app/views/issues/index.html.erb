<h1>Listing issues</h1>

<table>
  <tr>
    <th>Creator</th>
    <th>Opportunity</th>
    <th>Status</th>
    <th>Subject</th>
    <th>Content</th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%=h issue.creator %></td>
    <td><%=h issue.opportunity %></td>
    <td><%=h issue.issue_status %></td>
    <td><%=h issue.subject %></td>
    <td><%=h issue.content %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New issue', new_issue_path %>