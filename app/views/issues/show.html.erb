<% content_for :shortcuts do %>
<ul>
	<li><%= link_to "Voltar para Oportunidade", @opportunity%></li>
	<li><%= link_to_function("Atualizar Problema", "$('add_note').show()") %></li>
	<li><%= link_to 'Remover Problema', @issue, :confirm => 'Are you sure?', :method => :delete %></li>
</ul>
<% end %>

<h2>Detalhes de Problema</h2>

<table>
  <tr>
  	<th>Assunto</th>
	<th>Conteúdo</th>
    <th>Status</th>
    <th>Data</th>
    <th>Relator</th>
    <th>Responsável</th>
  </tr>

  <tr>  	
  	<td><%=h @issue.subject %></td>
    <td><%=h @issue.content %></td>
    <td><%=h @issue.status %></td>
    <td><%=h @issue.created_at.strftime("%D as %H:%M") %></td>
    <td><%=h @issue.creator %></td>
    <td><%=h @issue.responsible %></td>	
  </tr>
</table>

<h2>Notas associadas</h2>
<table>
  <tr>
    <th>Data</th>
    <th>Relator</th>
    <th>Mudanças</th>	
    <th>Título</th>
    <th>Conteúdo</th>
  </tr>

<% @notes.each do |note| %>
  <%= render :partial => 'notes/index', :locals => {:note => note, :notes => @notes} %>
<% end %>
</table>


<div id="add_note" style="display:none">
	<h2>Atualizar Problema</h2>
<% form_for([@issue, Note.new]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :assunto %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :conteúdo %><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.label :status %><br />
    <%= select :issue, :status_id, IssueStatus.find(:all).collect{|s| [s.name, s.id] } %>
  </p>
  <p>
    <%= f.label :responsável %><br />
    <%= select :issue, :responsible_id, [["Nenhum",false]] + User.find(:all).collect{|u| [u.login, u.id] } %>
  </p>

  <p>
    <%= f.submit 'Atualizar' %>
  </p>
<% end %>

</div>
