<h1>Listing notes</h1>

<table>
  <tr>
    <th>Creator</th>
    <th>Commentable</th>
    <th>Subject</th>
    <th>Content</th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%=h note.creator %></td>
    <td><%=h note.commentable %></td>
    <td><%=h note.subject %></td>
    <td><%=h note.content %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_note_path %>