<% content_for :shortcuts do %>
<ul><li><%= link_to 'Cancelar', @note.commentable %></li></ul>
<% end %>

<h1>Alterar comentário</h1>

<% form_for(@note) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :título %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :conteúdo %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
