<% content_for :title do %>
Todas as Pessoas
<% end %>
<% content_for :back do %>
<ul><li><%= link_to 'Voltar para contas', accounts_url %></li></ul>
<% end %>
<% content_for :shortcuts do %>
<ul>
<li><%= link_to 'Adicionar Pessoa', new_person_path %></li>
</ul>
<% end %>

<h2>Todas as Pessoas</h2>

<table>
  <tr>
    <th>Nome</th>	
    <th>Sobrenome</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%=h person.forename %></td>
    <td><%=h person.surname %> </td>
    <td><%= link_to 'Detalhes', person %></td>
    <td><%= link_to 'Alterar', edit_person_path(person) %></td>
    <td><%= link_to 'Remover', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br /> 
