<% end %>
<% content_for :back do %>
<ul><li><%= link_to 'Voltar para contas', accounts_url %></li></ul>
<% end %>
<% content_for :shortcuts do %>
<ul>
<li><%= link_to 'Adicionar Pessoa', new_person_path %></li>
</ul>
<% end %>

<h2>Todas as Pessoas</h2>

<table>
  <tr>
    <th>Nome</th>	
    <th>Sobrenome</th>
	<th>Info. Adicionais</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= link_to person.forename, person %></td>
    <td><%=h person.surname %> </td>
	<td><%= person.aditional_info %></td>
  </tr>
<% end %>
</table>

