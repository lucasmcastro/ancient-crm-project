<% content_for :title do %>
<%=h @callable %> > Alterando telefone 
<% end %>

<% content_for :back do %>
<ul><li><%= link_to 'Voltar', @callable %></li></ul>
<% end %>

<h1>Alterando Telefone para <%=h @callable %></h1>

<% form_for(@phone) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :número %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :descrição %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :tipo %><br />
    <%= f.select :phone_type, options_for_select(@phone.type_choices, @phone.phone_type) %>
  </p>
  <p>
    <%= f.label :operadora %><br />
    <%= f.select :company, options_for_select(@phone.company_choices, @phone.company) %>
  </p>
  <p>
    <%= f.submit 'Atualizar' %>
  </p>
<% end %>