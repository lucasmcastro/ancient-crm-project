<h1>Editing information_category</h1>

<% form_for(@information_category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :category_type %><br />
    <%= f.text_field :category_type %>
  </p>
  <p>
    <%= f.label :data_type %><br />
    <%= f.text_field :data_type %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

